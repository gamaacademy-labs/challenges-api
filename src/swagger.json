{
    "openapi": "3.0.3",
    "info": {
        "title": "API de Desafios - Gama Lab",
        "description": "Essa API verifica os endpoints da parte de Desafios do Gama Lab",
        "version": "1.0.0"
    },
    "servers":[
        {
            "url": "http://localhost:3350/v1",
            "description": "API de teste"
        }
    ],
    "paths": {
        "/users/{userId}": {
            "get": {
                "summary": "Exibir usuário através da busca pelo nome",
                "tags": ["Users"],
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "description": "Nome do usuário",
                        "required": true
                    }
                ],
                "responses":{
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Users"
                                }
                            }

                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "headers": {
                            "Usuario":
                            {
                                "description": "Usuário não encontrado"
                            }                          
                        }
                    }
                }
            }
        },
        "/challenges": {
            "get": {
                "summary": "Exibir todos os desafios",
                "tags": ["Challenges"],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Challenges"
                                }
                            }

                        }
                    },
                    "400":{
                        "description": "Não há desafios cadastrados"
                    }
                }
            }
        },
        "/challenges/{challengeId}": {
            "get": {
                "summary": "Exibir desafio e entregáveis através da busca pelo id do desafio",
                "tags": ["Challenges"],
                "parameters": [
                    {
                        "name": "challengeId",
                        "in": "path",
                        "description": "Id do desafio",
                        "required": true
                    }
                ],
                "responses":{
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/ChallengesById"
                                }
                            }

                        }
                    },
                    "400":{
                        "description": "Desafio não encontrado"
                    }
                }
            }
        },
        "/materials/{challengeId}": {
            "get": {
                "summary": "Exibir materiais do desafio através da busca pelo id do desafio",
                "tags": ["Materials"],
                "parameters": [
                    {
                        "name": "challengeId",
                        "in": "path",
                        "description": "Id do desafio",
                        "required": true
                    }
                ],
                "responses":{
